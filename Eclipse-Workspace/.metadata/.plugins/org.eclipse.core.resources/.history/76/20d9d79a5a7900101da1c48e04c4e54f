package br.com.senaisp.bauru.secao05.aula11;

import java.util.Random;

public class TicTacToe {
	private char[] tab;
	private String nomePlayer;
	private int[] posDisp;
	private Random rnd;
	private int qtdeDisp;
	public TicTacToe() {
		rnd = new Random();
		tab = new char[9];
		qtdeDisp = 9;
	}
	public String getNomePlayer() {
		return nomePlayer;
	}
	public void setNomePlayer(String nomePlayer) {
		this.nomePlayer = nomePlayer;
	}
	public void iniciarTabuleiro() {
		for (int i=0;i<9;i++) tab[i] = '_';
		tab[4] = 'X';
		qtdeDisp--;
		posDisp = new int[qtdeDisp];
		for(int i=0,j=0;i<9;i++) {
			if (i!=4) {
				posDisp[j] = i;
				j++;
			}
		}
	}
	public void mostrarTabuleiro() {
		for (int i=0;i<9;i++) {
			System.out.print(tab[i]);
			if (i%3==0 || i%3==1)
				System.out.print(" | ");
			if (i%3==2)
				System.out.println();
		}
	}
}
